<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns="http://javafx.com/javafx"
			xmlns:fx="http://javafx.com/fxml"
			stylesheets="/style/theme.css"
			fx:controller="nz.ac.auckland.se206.team27.controller.GameController">
	<VBox styleClass="root">
		<Label>Question 1 of 5</Label>
		<TextField promptText="Enter guess here" />
		<HBox>
			<Button>ā</Button>
			<Button>ē</Button>
			<Button>ī</Button>
			<Button>ō</Button>
			<Button>ū</Button>
		</HBox>
		<Button onAction="#clickSubmit">Submit</Button>

		<Button onAction="#clickSkip">(skip)</Button>

		<VBox>
			<Button>Play word again</Button>
			<VBox>
				<Label>1x</Label>
				<HBox>
				<Label>0.2x speed</Label>
				<Slider min="0.2" max="2" />
				<Label>2x speed</Label>
				</HBox>
			</VBox>
		</VBox>
	</VBox>
</AnchorPane>
