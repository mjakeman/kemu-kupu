<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>

<Pane xmlns="http://javafx.com/javafx"
	  xmlns:fx="http://javafx.com/fxml"
	  stylesheets="@../style/common.css,@../style/menu.css"
	  fx:controller="nz.ac.auckland.se206.team27.controller.HomeController">
	<VBox styleClass="container">
		<Label fx:id="title" styleClass="title,shadow" />
		<Button styleClass="menu-btn" onAction="#clickNewGame">New Game</Button>
		<Button styleClass="menu-btn" onAction="#clickPractice" disable="true">Practice Mode</Button>
		<Button styleClass="menu-btn" onAction="#clickPreferences">Preferences</Button>
		<Button styleClass="menu-btn" onAction="#clickQuit">Quit</Button>
		<Label styleClass="spacer" />
	</VBox>
</Pane>
