<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.AnchorPane?>

<TilePane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          stylesheets="@../style/common.css,@../style/menu.css"
          fx:controller="nz.ac.auckland.se206.team27.controller.PreviewTopicController"
          prefTileHeight="Infinity">
    <VBox styleClass="container" HBox.hgrow="ALWAYS">
        <Label fx:id="title" styleClass="title,shadow"/>
        <Label fx:id="blurb" styleClass="blurb,shadow" wrapText="true" maxWidth="350"/>
        <Label styleClass="spacer"/>
        <HBox>
            <Button onAction="#clickBack">Back</Button>
            <Button onAction="#clickPlay">Play</Button>
        </HBox>
    </VBox>
    <AnchorPane styleClass="aside" HBox.hgrow="ALWAYS">
        <Label styleClass="image-credit" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="20">Credit: Image Credit</Label>
    </AnchorPane>
</TilePane>