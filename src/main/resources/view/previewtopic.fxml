<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@../style/common.css,@../style/menu.css"
            fx:controller="nz.ac.auckland.se206.team27.controller.PreviewTopicController">
    <HBox styleClass="container">
        <VBox styleClass="main">
            <Label fx:id="title" styleClass="title" />
            <Label fx:id="blurb" styleClass="blurb" wrapText="true" maxWidth="350"/>
            <Label styleClass="spacer" />
            <HBox>
                <Button onAction="#clickBack">Back</Button>
                <Button onAction="#clickPlay">Play</Button>
            </HBox>
        </VBox>
        <VBox>
            <ImageView>
                <Image url="@../media/temp_logo.png" requestedWidth="300" requestedHeight="500" />
            </ImageView>
        </VBox>
    </HBox>

</AnchorPane>