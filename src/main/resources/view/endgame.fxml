<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns="http://javafx.com/javafx"
		   xmlns:fx="http://javafx.com/fxml"
		   stylesheets="@../style/common.css,@../style/game.css,@../style/endgame.css"
		   fx:controller="nz.ac.auckland.se206.team27.controller.EndGameController">
	<VBox fx:id="container" styleClass="container">
		<VBox styleClass="title-container">
			<Label styleClass="endgame-title" fx:id="labelTitle" />
			<Label styleClass="endgame-topic" fx:id="labelTopic" />
		</VBox>

		<TableView fx:id="tableView" maxWidth="600"/>

		<HBox fx:id="scoreContainer" styleClass="mini-score-label-container" alignment="BOTTOM_CENTER">
			<Label>Total Score: </Label>
			<Label styleClass="mini-score-label" fx:id="labelTotalScore" />
			<Label>pts</Label>
		</HBox>

		<HBox styleClass="spacing">
			<Button onAction="#clickHome" styleClass="raised-button,next-button">Back to home</Button>
			<Button onAction="#clickPlayAgain" styleClass="raised-button,play-button">Play again</Button>
		</HBox>
	</VBox>
</StackPane>
