<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.Pane?>

<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      stylesheets="@../style/common.css,@../style/menu.css"
      fx:controller="nz.ac.auckland.se206.team27.controller.ChooseTopicController">
    <VBox styleClass="container">
        <Label styleClass="title,shadow" >Choose Topic</Label>
        <ListView fx:id="listview" prefWidth="400" prefHeight="200" />
        <Label styleClass="spacer" />
        <HBox spacing="10">
            <Button onAction="#clickBack">Back</Button>
            <Button onAction="#clickContinue">Continue</Button>
        </HBox>
    </VBox>
</Pane>
