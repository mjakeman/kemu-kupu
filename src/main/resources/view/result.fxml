<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns="http://javafx.com/javafx"
			xmlns:fx="http://javafx.com/fxml"
			stylesheets="@../style/theme.css"
			fx:controller="nz.ac.auckland.se206.team27.controller.ResultController">
	<VBox styleClass="root">
		<Label>If at times you don't succeed, try and try again</Label>
		<VBox>
			<Label>Current score:</Label>
			<Label>5</Label>
		</VBox>
		<Button onAction="#clickTryAgain">Try again</Button>
		<Button onAction="#clickSkip">(skip)</Button>
	</VBox>
</AnchorPane>
